            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewBestPlayerA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewBestPlayerO1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewBestPlayerPlus1"
            android:layout_width="wrap_content"
